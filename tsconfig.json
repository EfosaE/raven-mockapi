{
  "compilerOptions": {
    "target": "ES6",

    "allowSyntheticDefaultImports": true,

    "module": "CommonJS", // because of this Knex library normally I compile to es6
    // "moduleResolution": "node", requires those .js extension in build
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"], // allows for access to type declarations
}
